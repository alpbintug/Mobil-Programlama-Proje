<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:backgroundTintMode="add"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_Events"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:background="?android:attr/fastScrollTrackDrawable"
        android:onClick="buttonEvents"
        android:text="EVENTS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Combines" />

    <Button
        android:id="@+id/button_Clothes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="112dp"
        android:background="?android:attr/fastScrollTrackDrawable"
        android:onClick="buttonClothes"
        android:text="CLOTHES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Drawers"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:background="?android:attr/fastScrollTrackDrawable"
        android:onClick="buttonDrawers"
        android:text="DRAWERS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Clothes" />

    <Button
        android:id="@+id/button_Combines"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:background="?android:attr/fastScrollTrackDrawable"
        android:onClick="buttonCombines"
        android:text="COMBINES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Drawers" />
</androidx.constraintlayout.widget.ConstraintLayout>